<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuração padrão para produção -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Domínios confiáveis para o app -->
    <domain-config>
        <!-- Google CDN para testes de velocidade -->
        <domain includeSubdomains="true">dl.google.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Configuração para API de IP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ip-api.com</domain>
    </domain-config>

    <!-- Configuração de debug (apenas em builds de desenvolvimento) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>